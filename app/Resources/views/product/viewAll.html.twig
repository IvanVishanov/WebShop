{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-center">
        <div class="row">
            <div>
                <form  action="{{ path('products_search') }}" class="navbar-form navbar-collapse"
                      role="search">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input id="Name" type="search" class="form-control"
                               placeholder="Search" name="search">
                        <label for="Category">Category</label>
                        <select class="form-control" id="Category" name="category">
                            <option value=""></option>
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{category.name}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <button  class="btn btn-primary btn-sm" style="margin-left: 0.5%;" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>
    <hr>
    <div class="container">
        <div class="row">
            {% for product in products %}
                <div class="col-sm-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">{{ product.name }}<span
                                    class="pull-right">Category: {{ product.category }}</span></div>
                        <div class="panel-body"><img src="{{ asset('uploads/images/' ~ product.image) }}"
                                                     class="img-responsive"
                                                     style="width:100%" alt="Image"></div>
                        <div class="panel-footer text-center"><span
                                    class="pull-left">Seller: {{ product.seller }}</span><span><a
                                        href="{{ path('cart_add',{'id':product.id}) }}">Add to cart</a></span><span
                                    class="pull-right">Price: {{ product.price }}</span></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

