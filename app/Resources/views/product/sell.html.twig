{% extends 'base.html.twig' %}

{% block body %}
    <div class="center-block">
        <div class="col-md-offset-4 col-md-4">
            <div class="form-group">
                <label class="control-label required" for="product_name">Name</label>
                <input type="text" id="product_name" value="{{ product.product.name }}" disabled class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label required" for="product_description">Description</label>
                <textarea id="product_description" disabled class="form-control">{{ product.product.description }}</textarea>
            </div>
            <div class="form-group">
                <label class="control-label required" for="product_category">Category</label>
                <input type="text" id="product_category" value="{{ product.product.category.name }}" disabled
                       class="form-control">
            </div>

            <form method="post" action="{{ path('products_sell', {'id': product.getId}) }}">
                <div class="form-group">
                    <label class="control-label required" for="product_quantity">Price</label>
                    <input type="text" id="product_quantity" name="price" value="{{ product.product.price }}"
                           class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label required" for="product_quantity">Quantity</label>
                    <input type="number" id="product_quantity" min="1" max="{{ product.quantity }}" name="quantity" value="{{ product.quantity }}"
                           class="form-control">
                </div>
                <button type="submit" value="Register">Save Changes</button>
            </form>
        </div>
    </div>
{% endblock %}
