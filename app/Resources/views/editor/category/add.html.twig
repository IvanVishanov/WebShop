{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
            <div class="col-md-offset-4 col-md-4">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" value="Register">Add</button>
                {{ form_end(form) }}
                {% for flash_message in app.session.flashBag.get('error') %}
                    <td colspan = "6">
                        <div class="flash-notice">
                            {{ flash_message }}
                        </div>
                    </td>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
